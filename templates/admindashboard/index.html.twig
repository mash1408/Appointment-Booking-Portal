					 } )
					this.no_of_booked_slots=slotsBooked
					this.no_of_unbooked_slots=slotsUnBooked 
					return slotsBooked
				},
				

				isToday(date) {
					const today = new Date();
					const d = new Date(this.year, this.month, date);

					return today.toDateString() === d.toDateString() ? true : false;
				},

				showEventModal(date) {
